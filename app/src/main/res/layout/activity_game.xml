                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyJ"
                android:text="J"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyK"
                android:text="K"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyL"
                android:text="L"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"/>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyEnter"
                android:text="ENTER"
                android:layout_width="60dp"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyZ"
                android:text="Z"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyX"
                android:text="X"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyC"
                android:text="C"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyV"
                android:text="V"
                android:layout_width="0dp"
