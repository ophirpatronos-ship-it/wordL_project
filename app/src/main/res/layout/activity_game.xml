<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".screens.GameActivity"
    android:background="#111">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORDLE"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- BOARD (5 rows, 5 columns) -->
    <LinearLayout
        android:id="@+id/boardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/keyboardContainer"
        android:layout_marginTop="30dp">


        <!-- 5 ROWS -->
        <!-- Each row contains 5 equal tiles -->

        <!-- ROW TEMPLATE -->


        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layoutDirection="rtl"  android:padding="4dp">

            <TextView
                android:id="@+id/cell_0_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layoutDirection="rtl" >

            <TextView
                android:id="@+id/cell_1_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layoutDirection="rtl" >

            <TextView
                android:id="@+id/cell_2_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layoutDirection="rtl" >

            <TextView
                android:id="@+id/cell_3_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layoutDirection="rtl" >

            <TextView
                android:id="@+id/cell_4_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_4"
                style="@style/Tile" />
        </LinearLayout>

    </LinearLayout>

    <!-- KEYBOARD -->
    <!-- Keyboard Layout for Wordle -->
    <LinearLayout
        android:id="@+id/keyboardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:minHeight="200dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyת"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ת" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyף"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ף" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyק"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ק" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyר"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ר" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyא"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="א" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyט"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ט" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyו"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ו" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyן"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ן" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyם"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ם" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyפ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="פ" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyש"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ש" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyד"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ד" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyג"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ג" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyכ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="כ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyע"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ע" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyי"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="י" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyח"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ח" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyל"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ל" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyך"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ך" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyEnter"
                android:text="ENTER"
                android:layout_width="60dp"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyז"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ז" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyס"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ס" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyב"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ב" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyה"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ה" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyנ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="נ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyמ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="מ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyצ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="צ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyDel"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="DEL" />
        </LinearLayout>

    </LinearLayout>

    <Chronometer
        android:id="@+id/gameStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
