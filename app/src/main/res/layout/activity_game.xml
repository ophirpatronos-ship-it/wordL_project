                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyDel"
                android:text="DEL"
                android:layout_width="60dp"
                android:layout_height="55dp"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
