<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    tools:context=".screens.EnglishGame">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="WORDLE"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BOARD (5 rows, 5 columns) -->
    <LinearLayout
        android:id="@+id/boardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/keyboardContainer"
        app:layout_constraintTop_toBottomOf="@id/title">


        <!-- 5 ROWS -->
        <!-- Each row contains 5 equal tiles -->

        <!-- ROW TEMPLATE -->


        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/cell_0_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_0_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/cell_1_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_1_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/cell_2_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_2_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/cell_3_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_3_4"
                style="@style/Tile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/cell_4_0"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_1"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_2"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_3"
                style="@style/Tile" />

            <TextView
                android:id="@+id/cell_4_4"
                style="@style/Tile" />
        </LinearLayout>

    </LinearLayout>

    <!-- KEYBOARD -->
    <!-- Keyboard Layout for Wordle -->
    <LinearLayout
        android:id="@+id/keyboardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyQ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Q" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyW"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="W" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyE"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="E" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyR"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="R" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyT"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="T" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyY"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Y" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyU"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="U" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyI"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="I" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyO"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="O" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyP"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="P" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyA"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="A" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyS"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="S" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyD"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="D" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyF"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="F" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyG"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="G" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyH"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="H" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyJ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="J" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyK"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="K" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyL"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="L" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyEnter"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="ENTER" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyZ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Z" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyX"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="X" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyC"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="C" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyV"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="V" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyB"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="B" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyN"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="N" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyM"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="M" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyDel"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="DEL" />
        </LinearLayout>

    </LinearLayout>

    <Chronometer
        android:id="@+id/gameStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
