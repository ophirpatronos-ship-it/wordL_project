<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ניהול מילים למשחק"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הכנס מילה חדשה:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextNewWord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="למשל: תפוח"
            android:inputType="text"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"/>

        <Button
            android:id="@+id/btnAddWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="הוסף לרשימה"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#757575"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מילים קיימות:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="2dp"/>



    <!-- KEYBOARD -->
    <!-- Keyboard Layout for Wordle -->
    <LinearLayout
        android:id="@+id/keyboardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:minHeight="200dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyת"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ת" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyף"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ף" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyק"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ק" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyר"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ר" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyא"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="א" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyט"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ט" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyו"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ן" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyן"
                android:text="I"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyם"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ם" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyפ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="פ" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/ש"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ש" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyד"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ד" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyג"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ג" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyכ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="כ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyע"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ע" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyי"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="י" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyח"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ח" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyל"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ל" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyך"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ך" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyEnter"
                android:text="ENTER"
                android:layout_width="60dp"
                android:layout_height="55dp"/>

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyז"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ז" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyס"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ס" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyב"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ב" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyה"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ה" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyנ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="נ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyמ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="מ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyצ"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="צ" />

            <com.example.wordl_project.views.KeyView
                android:id="@+id/keyDel"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="DEL" />
        </LinearLayout>

</LinearLayout>
</LinearLayout>